{% extends 'base.html.twig' %}

{% block body %}
    <h3 class="title">{{ 'Books in shelf'|trans }}</h3>
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked">
                {% set class = 'active' %}
                {% for shelf in shelfs %}
                    <li class="{{ class }}"><a data-toggle="tab" href="#tab{{ shelf.id }}">{{ shelf.name }}</a></li>
                    {% set class = '' %}
                {% endfor %}
            </ul>
        </div>
        <div class="col-md-9">
            <div class="tab-content">
                {% set class = 'active' %}
                {% for shelf in shelfs %}
                    <div id="tab{{ shelf.id }}" class="tab-pane fade in {{ class }}">
                        {% set class = '' %}
                        <div class="row">
                            {% for userbook in shelf.usersBooks %}
                                <div class="col-md-4">
                                    <div class="thumbnail">
                                        <img src="{{ asset('uploads/covers/aba-06.png') }}" alt="book">
                                        <div class="caption">
                                            <h4>{{ userbook.book.title }}</h4>
                                            <p>Avg rating {{ userbook.book.reviews|avg }}</p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}