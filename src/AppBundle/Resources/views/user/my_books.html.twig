{% extends 'base.html.twig' %}

{% block body %}
    <h3 class="title">{{ 'Your books'|trans }}</h3>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>{{ 'book.title'|trans }}</th>
            <th>{{ 'book.description'|trans }}</th>
            <th>{{ 'book.author'|trans }}</th>
            <th>{{ 'book.peaces'|trans }}</th>
            <th width="150px">{{ 'button.options'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.description }}</td>
                <td>{{ book.author.firstName }}</td>
                <td>{{ book.id }}</td>
                <td>
                    <a href="{{ path('edit_the_book', {id: book.id}) }}" class="btn btn-info btn-sm"><i class="fa fa-edit"></i>Edit</a>
                    <a href="{{ path('edit_the_book', {id: book.id}) }}" class="btn btn-danger btn-sm"><i class="fa fa-edit"></i>Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}